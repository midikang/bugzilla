<h1 align = "center">
	Update Bug Status
</h1>

<% @bug = Bug.find(params[:id]) %>

<%= render 'shared/errors',obj: @bug%>

<div class='row'>

	<div class='col-xs-12'>

		<%= form_for @bug, url: project_bug_path,:html => {class: "form-horizontal", role: "form"} do |f| %>

			<div class="form-group">

				<div class="control-label col-sm-2">

					<%= f.label :title %>

				</div>

				<div class="col-sm-8">

				<%= f.text_field :title,:readonly => true, class: "form-control", placeholder: "Title of article", autofocus: true %>

				</div>

			</div>

			<div class="form-group">

				<div class="control-label col-sm-2">

					<%= f.label :Type %>

				</div>

				<div class="col-sm-8">

				<%= f.select :ty, [@bug.ty],class: "form-control"%>

				</div>

			</div>

			<% if @bug.ty == "feature"%>

			<div class="form-group">

				<div class="control-label col-sm-2">

					<%= f.label :Status %>

				</div>

				<div class="col-sm-8">

				<%= f.select :status, ['new','started','completed'],:selected => @bug.status,class: "form-control"%>

				</div>

			</div>

			<% end %>

			<% if @bug.ty == "bug"%>

			<div class="form-group">

				<div class="control-label col-sm-2">

					<%= f.label :Status %>

				</div>

				<div class="col-sm-8">

				<%= f.select :status, ['new','started','resolved'],:selected => @bug.status,class: "form-control"%>

				</div>

			</div>

			<% end %>


			

	<div class="form-group">

		<div class="col-sm-offset-2 col-sm-10">

			<%= f.submit class: "btn btn-danger"%>

		</div>

		</div>

		<% end %>

	</div>

</div>

	